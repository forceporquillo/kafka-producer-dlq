<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="KafkaProducerApplication" status="error">
  <Appenders>
    <Console name="Console">
      <PatternLayout>
        <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n</Pattern>
      </PatternLayout>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="dev.forcecodes.kafka.reproduce.KafkaProducerApplicationKt" level="INFO" >
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="org.apache.kafka" level="ERROR">
      <AppenderRef ref="Console"/>
    </Logger>
    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>